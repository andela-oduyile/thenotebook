
<div class="container">

  <div class="row">
    <% @notes.each do |note| %>
      <div class="col s3 offset-s1 grey darken-4 note">
        <h5> <%= link_to note.title, note %></h5>
        <p class="amber-text"><i><%= time_ago_in_words(note.created_at) %></i></p>
      </div>
    <% end %>
  </div>

  <div class="fixed-action-btn">
    <%= link_to "<i class='large material-icons'>add</i>".html_safe, new_note_path, :class => "btn-floating btn-large red" %>
  </div>
